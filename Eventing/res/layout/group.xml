<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup android:id="@+id/radGroup"
	android:layout_width="200dp" 
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:checkedButton="@+id/radMale">
    <RadioButton android:id="@+id/radMate"
	    android:textSize="20sp"
    	android:text="同事"
    	/>
    <RadioButton android:id="@+id/radFriend"
 	    android:textSize="20sp"
    	android:text="朋友"
    	/>
    <RadioButton android:id="@+id/radTeacher"
 	    android:textSize="20sp"
    	android:text="老師"
    	/>
</RadioGroup>

    <Button
        android:id="@+id/buttonSetGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增" />

    <Button
        android:id="@+id/buttonEditGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯" />

    <Button
        android:id="@+id/buttonSetGroupOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="確定" />

</LinearLayout>